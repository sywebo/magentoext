<?xml version="1.0"?>
<config>
    <modules>
        <Sywebo_Ajaxcart>
            <version>1.0.0</version>
        </Sywebo_Ajaxcart>
    </modules>
    <global>
        <blocks>
            <syweboajaxcart>
                <class>Sywebo_Ajaxcart_Block</class>
            </syweboajaxcart>
        </blocks>
        <helpers>
            <syweboajaxcart>
                <class>Sywebo_Ajaxcart_Helper</class>
            </syweboajaxcart>
        </helpers>
    </global>
    <frontend>
        <layout>
            <updates>
                <syweboajaxcart>
                    <file>syweboajaxcart.xml</file>
                </syweboajaxcart>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <ajax_cart>
                                            <title>Sywebo ajaxcart section</title>
                                        </ajax_cart>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>
